[
  {
    "name": "media",
    "type": "group",
    "label": "Media",
    "importance": "medium",
    "fields": [
      {
        "name": "type",
        "type": "library",
        "label": "Type",
        "importance": "medium",
        "options": [
          "H5P.Image 1.0",
          "H5P.Video 1.3"
        ],
        "optional": true,
        "description": "Optional media to display above the question."
      },
      {
        "name": "disableImageZooming",
        "type": "boolean",
        "label": "Disable image zooming",
        "importance": "low",
        "default": false,
        "optional": true,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "type",
              "equals": "H5P.Image 1.0"
            }
          ]
        }
      }
    ]
  },
  {
    "name": "taskDescription",
    "label": "Task description",
    "type": "text",
    "widget": "html",
    "importance": "high",
    "description": "Optionally give a description here.",
    "optional": true,
    "enterMode": "div",
    "tags": [
      "strong",
      "em",
      "u",
      "a",
      "ul",
      "ol",
      "h2",
      "h3",
      "hr"
    ]
  },
  {
    "label": "Mode",
    "description": "Choose the mode for playing. Numbers will be filled in automatically, words need to be given.",
    "name": "mode",
    "type": "select",
    "optional": false,
    "options": [
      {
        "value": "numbers",
        "label": "Play with numbers"
      },
      {
        "value": "words",
        "label": "Play with words"
      }
    ],
    "default": "words"
  },
  {
    "name": "words",
    "label": "Words or phrases",
    "type": "group",
    "expanded": true,
    "widget": "showWhen",
    "showWhen": {
      "rules": [
        {
          "field": "mode",
          "equals": "words"
        }
      ]
    },
    "fields": [
      {
        "name": "wordsContent",
        "label": "Words or phrases",
        "description": "Use one line for each word, phrase or number. If this field is left blank, random numbers will be used.",
        "type": "text",
        "widget": "textarea",
        "optional": true
      }
    ]
  },
  {
    "label": "Board size",
    "importance": "high",
    "name": "size",
    "type": "number",
    "default": 5,
    "min": 3,
    "max": 7
  },
  {
    "name": "visuals",
    "type": "group",
    "label": "Visuals",
    "importance": "low",
    "description": "You can customize the visual appearance here.",
    "fields": [
      {
        "name": "buttonImage",
        "type": "image",
        "label": "Image",
        "description": "Joker image for the buttons.",
        "importance": "low",
        "optional": true
      },
      {
        "name": "backgroundColor",
        "type": "text",
        "label": "Background Color",
        "importance": "low",
        "description": "Background color for the board.",
        "optional": true,
        "default": "",
        "widget": "colorSelector",
        "spectrum": {
          "showInput": true
        }
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioural settings",
    "importance": "low",
    "description": "These options will let you control how the task behaves.",
    "fields": [
      {
        "name": "enableRetry",
        "label": "Enable \"Retry\"",
        "type": "boolean",
        "importance": "low",
        "default": true,
        "optional": true
      },
      {
        "label": "Shuffle on retry",
        "description": "If checked, the words/phrases/numbers will be shuffled on retry.",
        "importance": "low",
        "name": "shuffleOnRetry",
        "type": "boolean",
        "default": true,
        "optional": true,
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "enableRetry",
              "equals": true
            }
          ]
        }
      },
      {
        "label": "Set joker",
        "description": "Will place an unturnable joker in the center of the board if its size is odd.",
        "importance": "low",
        "name": "joker",
        "type": "boolean",
        "default": false,
        "optional": true
      }
    ]
  },
  {
    "name": "tryAgain",
    "label": "Text for \"Retry\" button",
    "type": "text",
    "importance": "low",
    "default": "Retry",
    "common": true
  }
]
